{
  "name": "@acme/chrome-extension",
  "displayName": "StreamSense",
  "version": "0.0.1",
  "description": "Enhance your streaming experience with smart features for Netflix, Prime Video, Disney+, and Max",
  "author": "futuromy",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "clean": "git clean -xdf .turbo node_modules .plasmo build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check . --ignore-path ../../.prettierignore",
    "format:write": "prettier --write . --ignore-path ../../.prettierignore",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "lucide-react": "^0.552.0",
    "better-auth": "catalog:",
    "@acme/auth": "workspace:*",
    "@acme/shared": "workspace:*",
    "@acme/api": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "@trpc/tanstack-react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "plasmo": "0.90.5",
    "@plasmohq/messaging": "0.7.2",
    "@plasmohq/storage": "1.15.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "catalog:",
    "superjson": "catalog:"
  },
  "devDependencies": {
    "@acme/config-eslint-prettier": "workspace:*",
    "@types/chrome": "0.0.317",
    "@types/node": "20.11.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "dotenv-cli": "^7.4.2",
    "@tailwindcss/postcss": "^4.1.16",
    "tailwindcss": "^4.1.10",
    "typescript": "catalog:"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage",
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
