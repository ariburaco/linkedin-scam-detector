{
  "name": "@acme/db",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "db:push": "bun with-env prisma db push --",
    "db:studio": "bun with-env prisma studio",
    "db:generate": "bun with-env prisma generate",
    "db:migrate": "bun with-env prisma migrate dev",
    "db:seed": "bun with-env bun src/seed/index.ts",
    "clean": "git clean -xdf .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check . --ignore-path ../../.prettierignore",
    "format:write": "prettier --write . --ignore-path ../../.prettierignore",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@acme/config-eslint-prettier": "workspace:*",
    "prisma": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "dependencies": {
    "@acme/shared": "workspace:*",
    "@prisma/client": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
